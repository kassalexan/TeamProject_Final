
@{
    ViewBag.Title = "AdminIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="single-hero-post bg-overlay">
    <!-- Post Image -->
    <div class="slide-img bg-img" style="background-image: url(../../Content/img/bg-img/1.jpg);"></div>
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <!-- Post Content -->
                <div class="hero-slides-content text-center">
                    <form action="#" method="post">
                        <div class="section-heading">
                            <div class="widget-title">
                                <p style="font-size:33px;">What would you like to do?</p>
                            </div>
                            <div class="contact-information">
                                <p>
                                    <a href="@Url.Action("MessageList", "Message")" style="font-size:25px;">View all messages</a>
                                    <br />
                                    <a href="@Url.Action("UserList", "Admin")" style="font-size:25px;">View all users</a>
                                </p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


